    "type": "git",
    "url": "https://github.com/louiscenter/hypercast"
  },
  "devDependencies": {
    "electron": "^9.2.0",
    "electron-packager": "^15.0.0"
  },
  "dependencies": {
    "@hyperswarm/replicator": "^1.8.0",
    "buffer-to-arraybuffer": "0.0.5",
    "choo": "^6.6.1",
    "getusermedia": "^2.0.1",
    "hyperdiscovery": "^7.0.0",
    "hyperdrive": "^10.17.1",
    "media-recorder-stream": "2.1.1",
    "on-load": "^3.3.4",
    "pump": "^1.0.2",
    "webm-cluster-stream": "^1.0.0"
  }
